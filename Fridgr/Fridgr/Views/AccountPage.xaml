<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Fridgr.Views.AccountPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="NameLabel" TextColor="White" FontFamily="JellieRoman" FontSize="40"/>
            <Label x:Name="EmailLabel" TextColor="White" />
            <Button x:Name="ResetPasswordButton" Text="Reset Password" Pressed="ResetPasswordButton_OnPressed"/>
            <Entry x:Name="OldPassword" Placeholder="Old Password" IsPassword="True" IsVisible="False" HorizontalOptions="Center"/>
            <Entry x:Name="NewPassword" Placeholder="New Password" IsPassword="True" IsVisible="False" HorizontalOptions="Center"/>
            <Entry x:Name="ConfirmPassword" Placeholder="Confirm Password" IsPassword="True" IsVisible="False" HorizontalOptions="Center"/>
            <Button x:Name="ChangePasswordButton" Text="Change Password" IsVisible="False" Pressed="ChangePasswordButton_OnPressed"/>
            <Button x:Name="btn_logout" Text="Log Out" Clicked="logoutProcedure" />
        </StackLayout>
       
    </ContentPage.Content>
</ContentPage>
